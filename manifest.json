{
    "manifest_version": 2, 
    "name": "Handy Highlight",
    "description": "Highlighter for the web.",
    "version": "1.0",
    "permissions": ["activeTab"],
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "allFrames": true,
            "js": ["/js/jquery.js", "/js/content.js"],
            "css": ["/css/style.css"]
       }
     ],
    "action": {
        "default_icon": {
            "32":"/images/icon.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [ 
        "images/*.jpg",
        "images/*.png" 
     ] 
}
